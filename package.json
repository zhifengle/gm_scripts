{
  "name": "gm_script",
  "version": "0.0.1",
  "description": "gm scripts",
  "main": "src/index.js",
  "scripts": {
    "build:export_tool": "cross-env SCRIPT_NAME=bangumi_collection_export_tool rollup -c build/rollup.config.us.js",
    "build:douban": "cross-env SCRIPT_NAME=migrate_douban_collection_to_bangumi rollup -c build/rollup.config.us.js",
    "build:anime_score": "cross-env SCRIPT_NAME=bangumi_anime_score_compare rollup -c build/rollup.config.us.js",
    "build:score_helper": "cross-env SCRIPT_NAME=score_comparation_helper rollup -c build/rollup.config.us.js",
    "build:qiandao": "cross-env SCRIPT_NAME=qiandao XHR_MODE=fetch rollup -c build/rollup.config.us.js",
    "build:skip_intro": "cross-env SCRIPT_NAME=skip_intro rollup -c build/rollup.config.us.js",
    "build:infobox_fold": "cross-env SCRIPT_NAME=bangumi_infobox_fold rollup -c build/rollup.config.us.js",
    "dev:douban": "cross-env SCRIPT_NAME=migrate_douban_collection_to_bangumi rollup -w -c build/rollup.config.us.js",
    "dev:anime_score": "cross-env SCRIPT_NAME=bangumi_anime_score_compare rollup -w -c build/rollup.config.us.js",
    "dev:score_helper": "cross-env SCRIPT_NAME=score_comparation_helper rollup -w -c build/rollup.config.us.js",
    "dev:test": "rollup -w -c build/rollup.config.dev.js",
    "dev:user_script": "cross-env SCRIPT_NAME=dev rollup -w -c build/rollup.config.us.dev.js",
    "clean": "rimraf dist/",
    "test": "jest --all"
  },
  "author": "22earth",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-multi-entry": "4.1.0",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-replace": "4.0.0",
    "@types/jest": "^28.1.6",
    "@types/jsdom": "20.0.0",
    "@types/node": "18.6.3",
    "cross-env": "7.0.3",
    "fuse.js": "6.4.0",
    "jest": "^28.1.3",
    "jest-extended": "3.0.1",
    "jest-raw-loader": "^1.0.1",
    "jsdom": "^20.0.0",
    "rollup": "2.77.2",
    "rollup-plugin-terser": "7.0.2",
    "rollup-plugin-typescript2": "0.32.1",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "bangumi-data": "0.3.99",
    "kv-expiration": "0.0.5"
  }
}
